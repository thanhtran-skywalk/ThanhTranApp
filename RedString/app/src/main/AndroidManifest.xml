<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thanhtran.redstring">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:name=".app.AppController"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".main.activities.StoryActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".main.activities.LoginActivity"
            android:label="Red String - Login"
            android:parentActivityName=".main.activities.StoryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".main.activities.StoryActivity" />
        </activity>

        <activity
            android:name=".main.activities.SignUpActivity"
            android:label="Sign Up"
            android:parentActivityName=".main.activities.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".main.activities.LoginActivity" />
        </activity>

        <activity
            android:name=".newstory.activities.AddLoveMsgActivity"
            android:label="Add New Story"
            android:parentActivityName=".main.activities.StoryActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".main.activities.StoryActivity" />
        </activity>

        <meta-data
            android:name="com.parse.APPLICATION_ID"
            android:value="@string/app_key" />
        <meta-data
            android:name="com.parse.CLIENT_KEY"
            android:value="@string/client_key" />
    </application>

</manifest>
